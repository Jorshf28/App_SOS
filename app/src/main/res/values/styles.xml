<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TextAppearance.App.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Image Button Style -->
    <style name="Widget.App.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Spinner Style -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>